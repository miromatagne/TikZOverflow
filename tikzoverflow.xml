<?xml version="1.0" encoding="UTF-8"?>
<project name="tikzoverflow" default="all">
  
  
  <property file="tikzoverflow.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.klib"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.zip"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.11" value="${jdk.home.11}/bin"/>
  <path id="jdk.classpath.11">
    <fileset dir="${jdk.home.11}">
      <include name="../jbr!/java.base"/>
      <include name="../jbr!/java.compiler"/>
      <include name="../jbr!/java.datatransfer"/>
      <include name="../jbr!/java.desktop"/>
      <include name="../jbr!/java.instrument"/>
      <include name="../jbr!/java.logging"/>
      <include name="../jbr!/java.management"/>
      <include name="../jbr!/java.management.rmi"/>
      <include name="../jbr!/java.naming"/>
      <include name="../jbr!/java.net.http"/>
      <include name="../jbr!/java.prefs"/>
      <include name="../jbr!/java.rmi"/>
      <include name="../jbr!/java.scripting"/>
      <include name="../jbr!/java.se"/>
      <include name="../jbr!/java.security.jgss"/>
      <include name="../jbr!/java.security.sasl"/>
      <include name="../jbr!/java.smartcardio"/>
      <include name="../jbr!/java.sql"/>
      <include name="../jbr!/java.sql.rowset"/>
      <include name="../jbr!/java.transaction.xa"/>
      <include name="../jbr!/java.xml"/>
      <include name="../jbr!/java.xml.crypto"/>
      <include name="../jbr!/javafx.base"/>
      <include name="../jbr!/javafx.controls"/>
      <include name="../jbr!/javafx.fxml"/>
      <include name="../jbr!/javafx.graphics"/>
      <include name="../jbr!/javafx.media"/>
      <include name="../jbr!/javafx.swing"/>
      <include name="../jbr!/javafx.web"/>
      <include name="../jbr!/jdk.accessibility"/>
      <include name="../jbr!/jdk.aot"/>
      <include name="../jbr!/jdk.attach"/>
      <include name="../jbr!/jdk.charsets"/>
      <include name="../jbr!/jdk.compiler"/>
      <include name="../jbr!/jdk.crypto.cryptoki"/>
      <include name="../jbr!/jdk.crypto.ec"/>
      <include name="../jbr!/jdk.dynalink"/>
      <include name="../jbr!/jdk.hotspot.agent"/>
      <include name="../jbr!/jdk.httpserver"/>
      <include name="../jbr!/jdk.internal.ed"/>
      <include name="../jbr!/jdk.internal.jvmstat"/>
      <include name="../jbr!/jdk.internal.le"/>
      <include name="../jbr!/jdk.internal.vm.ci"/>
      <include name="../jbr!/jdk.internal.vm.compiler"/>
      <include name="../jbr!/jdk.internal.vm.compiler.management"/>
      <include name="../jbr!/jdk.jdi"/>
      <include name="../jbr!/jdk.jdwp.agent"/>
      <include name="../jbr!/jdk.jfr"/>
      <include name="../jbr!/jdk.jsobject"/>
      <include name="../jbr!/jdk.localedata"/>
      <include name="../jbr!/jdk.management"/>
      <include name="../jbr!/jdk.management.agent"/>
      <include name="../jbr!/jdk.management.jfr"/>
      <include name="../jbr!/jdk.naming.dns"/>
      <include name="../jbr!/jdk.naming.rmi"/>
      <include name="../jbr!/jdk.net"/>
      <include name="../jbr!/jdk.pack"/>
      <include name="../jbr!/jdk.scripting.nashorn"/>
      <include name="../jbr!/jdk.scripting.nashorn.shell"/>
      <include name="../jbr!/jdk.sctp"/>
      <include name="../jbr!/jdk.security.auth"/>
      <include name="../jbr!/jdk.security.jgss"/>
      <include name="../jbr!/jdk.unsupported"/>
      <include name="../jbr!/jdk.xml.dom"/>
      <include name="../jbr!/jdk.zipfs"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.11}"/>
  <property name="project.jdk.bin" value="${jdk.bin.11}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.11"/>
  
  <!-- Modules -->
  
  
  <!-- Module TikZOverflow -->
  
  <dirname property="module.tikzoverflow.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.tikzoverflow" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.tikzoverflow" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.tikzoverflow" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.tikzoverflow" value="-encoding UTF-8 -source 11 -target 11 ${compiler.args}"/>
  
  <property name="tikzoverflow.output.dir" value="${module.tikzoverflow.basedir}/out/production/TikZOverflow"/>
  <property name="tikzoverflow.testoutput.dir" value="${module.tikzoverflow.basedir}/out/test/TikZOverflow"/>
  
  <path id="tikzoverflow.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="tikzoverflow.module.production.classpath">
    <path refid="${module.jdk.classpath.tikzoverflow}"/>
  </path>
  
  <path id="tikzoverflow.runtime.production.module.classpath">
    <pathelement location="${tikzoverflow.output.dir}"/>
  </path>
  
  <path id="tikzoverflow.module.classpath">
    <path refid="${module.jdk.classpath.tikzoverflow}"/>
    <pathelement location="${tikzoverflow.output.dir}"/>
    <pathelement location="${path.variable.maven_repository}/org/apiguardian/apiguardian-api/1.0.0/apiguardian-api-1.0.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/junit/jupiter/junit-jupiter-api/5.4.2/junit-jupiter-api-5.4.2.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/junit/jupiter/junit-jupiter-engine/5.4.2/junit-jupiter-engine-5.4.2.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/junit/jupiter/junit-jupiter-params/5.4.2/junit-jupiter-params-5.4.2.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/junit/jupiter/junit-jupiter/5.4.2/junit-jupiter-5.4.2.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/junit/platform/junit-platform-commons/1.4.2/junit-platform-commons-1.4.2.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/junit/platform/junit-platform-engine/1.4.2/junit-platform-engine-1.4.2.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/opentest4j/opentest4j/1.1.1/opentest4j-1.1.1.jar"/>
  </path>
  
  <path id="tikzoverflow.runtime.module.classpath">
    <pathelement location="${tikzoverflow.testoutput.dir}"/>
    <pathelement location="${tikzoverflow.output.dir}"/>
    <pathelement location="${path.variable.maven_repository}/org/apiguardian/apiguardian-api/1.0.0/apiguardian-api-1.0.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/junit/jupiter/junit-jupiter-api/5.4.2/junit-jupiter-api-5.4.2.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/junit/jupiter/junit-jupiter-engine/5.4.2/junit-jupiter-engine-5.4.2.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/junit/jupiter/junit-jupiter-params/5.4.2/junit-jupiter-params-5.4.2.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/junit/jupiter/junit-jupiter/5.4.2/junit-jupiter-5.4.2.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/junit/platform/junit-platform-commons/1.4.2/junit-platform-commons-1.4.2.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/junit/platform/junit-platform-engine/1.4.2/junit-platform-engine-1.4.2.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/opentest4j/opentest4j/1.1.1/opentest4j-1.1.1.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.tikzoverflow">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.tikzoverflow">
    <patternset refid="excluded.from.module.tikzoverflow"/>
  </patternset>
  
  <path id="tikzoverflow.module.sourcepath">
    <dirset dir="${module.tikzoverflow.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="tikzoverflow.module.test.sourcepath">
    <dirset dir="${module.tikzoverflow.basedir}">
      <include name="test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.tikzoverflow" depends="compile.module.tikzoverflow.production,compile.module.tikzoverflow.tests" description="Compile module TikZOverflow"/>
  
  <target name="compile.module.tikzoverflow.production" description="Compile module TikZOverflow; production classes">
    <mkdir dir="${tikzoverflow.output.dir}"/>
    <javac destdir="${tikzoverflow.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.tikzoverflow}/javac">
      <compilerarg line="${compiler.args.tikzoverflow}"/>
      <bootclasspath refid="tikzoverflow.module.bootclasspath"/>
      <classpath refid="tikzoverflow.module.production.classpath"/>
      <classpath>
        <pathelement path="lib/commons-logging-1.2.jar"/>
        <pathelement path="lib/fontbox-2.0.19.jar"/>
        <pathelement path="lib/pdfbox-app-2.0.19.jar"/>
      </classpath>
      <src refid="tikzoverflow.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.tikzoverflow"/>
    </javac>
    
    <copy todir="${tikzoverflow.output.dir}">
      <fileset dir="${module.tikzoverflow.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.tikzoverflow.tests" depends="compile.module.tikzoverflow.production" description="compile module TikZOverflow; test classes" unless="skip.tests">
    <mkdir dir="${tikzoverflow.testoutput.dir}"/>
    <javac destdir="${tikzoverflow.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.tikzoverflow}/javac">
      <compilerarg line="${compiler.args.tikzoverflow}"/>
      <bootclasspath refid="tikzoverflow.module.bootclasspath"/>
      <classpath refid="tikzoverflow.module.classpath"/>
      <src refid="tikzoverflow.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.tikzoverflow"/>
    </javac>
    
    <copy todir="${tikzoverflow.testoutput.dir}">
      <fileset dir="${module.tikzoverflow.basedir}/test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.tikzoverflow" description="cleanup module">
    <delete dir="${tikzoverflow.output.dir}"/>
    <delete dir="${tikzoverflow.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.tikzoverflow" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.tikzoverflow" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.g08-iteration-1" value="${basedir}/out/artifacts/g08_iteration_1"/>
    <property name="artifact.output.tikzoverflow:jar" value="${basedir}/dist"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.g08-iteration-1.jar" value="${artifacts.temp.dir}/g08-iteration-1.jar"/>
    <property name="temp.jar.path.TikZOverflow.jar" value="${artifacts.temp.dir}/TikZOverflow-latest.jar"/>
  </target>
  
  <target name="artifact.g08-iteration-1" depends="init.artifacts" description="Build &#39;g08-iteration-1&#39; artifact">
    <property name="artifact.temp.output.g08-iteration-1" value="${artifacts.temp.dir}/g08_iteration_1"/>
    <mkdir dir="${artifact.temp.output.g08-iteration-1}"/>
    <jar destfile="${temp.jar.path.g08-iteration-1.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="out"/>
    </jar>
    <copy file="${temp.jar.path.g08-iteration-1.jar}" tofile="${artifact.temp.output.g08-iteration-1}/g08-latest.jar"/>
  </target>
  
  <target name="artifact.tikzoverflow:jar" depends="init.artifacts, compile.module.tikzoverflow" description="Build &#39;TikZOverflow:jar&#39; artifact">
    <property name="artifact.temp.output.tikzoverflow:jar" value="${artifacts.temp.dir}/TikZOverflow_jar"/>
    <mkdir dir="${artifact.temp.output.tikzoverflow:jar}"/>
    <jar destfile="${temp.jar.path.TikZOverflow.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${tikzoverflow.output.dir}"/>
    </jar>
    <copy file="${temp.jar.path.TikZOverflow.jar}" tofile="${artifact.temp.output.tikzoverflow:jar}/TikZOverflow.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.g08-iteration-1, artifact.tikzoverflow:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.g08-iteration-1}"/>
    <copy todir="${artifact.output.g08-iteration-1}">
      <fileset dir="${artifact.temp.output.g08-iteration-1}"/>
    </copy>
    <mkdir dir="${artifact.output.tikzoverflow:jar}"/>
    <copy todir="${artifact.output.tikzoverflow:jar}">
      <fileset dir="${artifact.temp.output.tikzoverflow:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>